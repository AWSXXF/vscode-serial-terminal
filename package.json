{
  "name": "serialterminal",
  "displayName": "serial terminal",
  "publisher": "awsxxf",
  "version": "0.0.21",
  "description": "An interactive serial terminal tool",
  "repository": {
    "type": "git",
    "url": "https://github.com/AWSXXF/vscode-serial-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/AWSXXF/vscode-serial-terminal/issues"
  },
  "icon": "./assets/logo.png",
  "l10n": "./l10n",
  "keywords": [
    "serial port",
    "serial",
    "com",
    "terminal",
    "console",
    "uart"
  ],
  "pricing": "Free",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "entryView",
          "title": "%entryView.title%",
          "icon": "$(debug-disconnect)"
        }
      ]
    },
    "views": {
      "entryView": [
        {
          "name": "%TreeView.serialPort%",
          "id": "serialport.serialportView",
          "initialSize": 50
        },
        {
          "name": "log",
          "id": "serialport.logs",
          "initialSize": 20
        },
        {
          "name": "script",
          "id": "serialport.scripts",
          "initialSize": 20
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "serialport.refreshSerialPortView",
          "when": "view == serialport.serialportView",
          "group": "navigation@2"
        },
        {
          "command": "serialport.openSerialPortConfigaration",
          "when": "view == serialport.serialportView",
          "group": "navigation@1"
        },
        {
          "command": "serialport.refreshLogView",
          "when": "view == serialport.logs",
          "group": "navigation@2"
        },
        {
          "command": "serialport.openLogConfigaration",
          "when": "view == serialport.logs",
          "group": "navigation@1"
        },
        {
          "command": "serialTerminal.createScriptNotebook",
          "when": "view == serialport.scripts",
          "group": "navigation@1"
        },
        {
          "command": "serialport.openScriptConfigaration",
          "when": "view == serialport.scripts",
          "group": "navigation@2"
        },
        {
          "command": "serialport.refreshScriptView",
          "when": "view == serialport.scripts",
          "group": "navigation@3"
        },
        {
          "command": "serialport.startSaveLog",
          "when": "view == terminal && serialTerminal.serialPortTernimalFocus && !serialTerminal.serialPortTernimalRecordingLog",
          "group": "navigation"
        },
        {
          "command": "serialport.stopSaveLog",
          "when": "view == terminal && serialTerminal.serialPortTernimalFocus && serialTerminal.serialPortTernimalRecordingLog",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "serialTerminal.openSerialPort",
          "when": "view == serialport.serialportView",
          "group": "inline"
        },
        {
          "command": "serialTerminal.viewLog",
          "when": "view == serialport.logs",
          "group": "inline@2"
        },
        {
          "command": "serialTerminal.revealInExplorer",
          "when": "view == serialport.logs",
          "group": "inline@1"
        },
        {
          "command": "serialTerminal.revealInExplorer",
          "when": "view == serialport.scripts",
          "group": "inline@1"
        },
        {
          "command": "serialTerminal.openTreeItemResource",
          "when": "view == serialport.scripts",
          "group": "inline@2"
        }
      ]
    },
    "notebooks": [
      {
        "type": "scrnb",
        "displayName": "Script Notebook",
        "selector": [
          {
            "filenamePattern": "*.scrnb"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "serialTerminal.openSerialPort",
        "icon": "$(arrow-right)",
        "title": "%commands.openSerialTerminal%"
      },
      {
        "command": "serialport.refreshSerialPortView",
        "icon": "$(sync)",
        "title": "%commands.refreshView%"
      },
      {
        "command": "serialport.refreshLogView",
        "icon": "$(sync)",
        "title": "%commands.refreshView%"
      },
      {
        "command": "serialport.refreshScriptView",
        "icon": "$(sync)",
        "title": "%commands.refreshView%"
      },
      {
        "command": "serialport.openSerialPortConfigaration",
        "icon": "$(gear)",
        "title": "%commands.openSerialPortConfigaration%"
      },
      {
        "command": "serialport.openLogConfigaration",
        "icon": "$(gear)",
        "title": "%commands.openLogConfigaration%"
      },
      {
        "command": "serialport.openScriptConfigaration",
        "icon": "$(gear)",
        "title": "%commands.openScriptConfigaration%"
      },
      {
        "command": "serialport.startSaveLog",
        "icon": "$(save-as)",
        "title": "%commands.startSaveLog%"
      },
      {
        "command": "serialport.stopSaveLog",
        "icon": "$(stop-circle)",
        "title": "%commands.stopSaveLog%"
      },
      {
        "icon": "$(arrow-right)",
        "command": "serialTerminal.openTreeItemResource",
        "title": "%commands.openTreeItemResource%"
      },
      {
        "icon": "$(arrow-right)",
        "command": "serialTerminal.viewLog",
        "title": "%commands.viewLog%"
      },
      {
        "command": "serialTerminal.revealInExplorer",
        "icon": "$(file-directory)",
        "title": "%commands.revealInExplorer%"
      },
      {
        "command": "serialTerminal.createScriptNotebook",
        "icon": "$(new-file)",
        "title": "%commands.createScriptNotebook%"
      },
      {
        "command": "doSomething",
        "icon": "$(play)",
        "title": "Serial Terminal: do something"
      }
    ],
    "configuration": {
      "title": "Serial Terminal",
      "properties": {
        "SerialTerminal.serial port.Boud Rate": {
          "type": "array",
          "default": [
            115200,
            9600,
            19200,
            38400,
            76800,
            153600,
            460800,
            921600,
            2000000
          ],
          "items": {
            "type": "number",
            "pattern": "^[0-9]$"
          },
          "markdownDescription": "%configurations.serialPort.boudRate.description%"
        },
        "SerialTerminal.log.savepath": {
          "title": "%configurations.log.savepath.title%",
          "type": "string",
          "markdownDescription": "%configurations.log.savepath.description%"
        },
        "SerialTerminal.script.savepath": {
          "title": "%configurations.script.savepath.title%",
          "type": "string",
          "markdownDescription": "%configurations.script.savepath.description%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/l10n-dev": "^0.0.26",
    "@vscode/test-electron": "^2.3.0",
    "electron": "^25.0.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.33",
    "@vscode/l10n": "^0.0.14",
    "colors": "^1.4.0",
    "serialport": "^11.0.0"
  }
}